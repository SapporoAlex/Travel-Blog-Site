<%= stylesheet_link_tag "blog", media: "all" %>
<body>
<div id="menu">
<div id="logo">
  <%= image_tag "logo.jpg", alt: "Logo" %>
</div>
        <div id="search-bar">
        <div id="search-form"><%= form_with(url: articles_path, method: :get, local: true) do |form| %></div>
            <div><%= form.text_field :query, placeholder: "Search by title, body or author" %></div>
            <div><%= form.submit "Search" %></div>
        <% end %>
    </div>
    <p id="write-article-button"><%= link_to "Write Article", new_article_path %></p>
    <!-- Search Form -->

</div>
    <div id="articles-main-list">

        <p id="hokkaido-travel-blog-text">The Hokkaido Travel blog!</p>
        <div id="article-section">
            <ul>
                <% @articles.each do |article| %>
                    <% unless article.archived? %>
                <li>
                    <p id="article-title"><%= link_to article.title, article %></p>
                    <p id="author"><%= link_to article.author, article %></p>
                            <% if article.image.attached? %>
                                <%= image_tag article.image, alt: article.title, width: 100, height: 100 %>
                            <% end %>
                    <p id="last-updated">last updated: <%= link_to article.updated_at %></p>
                </li>
                <% end %>
            <% end %>
            </ul>
        </div>
</div>
</body>
